@{
		ViewData["Title"] = "Create";
}

@model BackyardGleanersClient.Models.Gardener;
<body id="splash-main">
<main class="my-5">
  <div class="container col-xl-10 col-xxl-8 px-5 py-4 shadow-lg bg-light rounded-3">
    <div class="row align-items-center g-lg-5">
      <div class="col-lg-7 text-center text-lg-start">
        <div style="width:100%;height:0;padding-bottom:38%;position:relative;"><iframe src="https://giphy.com/embed/W0a5PeJMfJJZOTD1YL" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/gifs/red-sweet-pittoresque-W0a5PeJMfJJZOTD1YL"></a></p>
        <h1 class="display-8 fw-bold lh-1 text-body-emphasis mb-3">Thanks for contributing to Backyard Gleaners!</h1>
        <p class="col-lg-10 fs-6">Please fill out our form to create your profile and share your garden with the community.
        <ul>
          <li>Send us a picture of your garden to use for your Profile once completed! After that we'll add you to our custom PDX Gleaner's Google map as well.</li>
        </ul>
        </p>
      </div>
			<div class="col-md-10 col-lg-5 py-2 g-5 text-dark rounded">
        @using (Html.BeginForm())
        {
          <form class="p-4 p-md-5">
          <div class="form mb-3">
          @Html.LabelFor(model => model.Name, new { @class = "form-label" } )
          @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required"})
          </div>
          <div class="form mb-3">
          @Html.LabelFor(model => model.Description, new { @class = "form-label" } )
          @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @required = "required"})
          </div>
          <div class="form mb-3">
          @Html.LabelFor(model => model.Food, new { @class = "form-label" } )
          @Html.TextBoxFor(model => model.Food, new { @class = "form-control", @required = "required"})
          </div>
          <div class="form mb-3">
          @Html.LabelFor(model => model.Availability, new { @class = "form-label" } )
          @Html.TextBoxFor(model => model.Availability, new { @class = "form-control", @required = "required"})
          </div>
          <div class="form mb-3">
          @Html.LabelFor(model => model.Location, new { @class = "form-label"} )
          @Html.TextBoxFor(model => model.Location, new { @class = "form-control", @required = "required"})
          </div>
          <div class="form mb-3">
          @Html.LabelFor(model => model.Contact, new { @class = "form-label"} )
          @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", @required = "required"})
          </div>
          <input type="submit" value="Save Profile" class="btn btn-info btn-sm results-button"/>
          </form>
        }				
			</div>
		</div>
  </div>
</main>
</body>