@{
    ViewData["Title"] = "Gardeners";
}

@using BackyardGleanersClient.Models;

<div class="row row-cols-1 row-cols-md-3 g-4">
  @foreach (Gardener gardener in Model)
  {
  <div class="col">
    <div class="card">
      <img src=@gardener.ProfilePic class="card-img-top" alt="gardener">
      <div class="card-body">
        <h5 class="card-title"> <strong>@gardener.Name</strong></h5>
        <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <a href="/Gardener/Details/@(gardener.GardenerId)" class="btn btn-primary btn-sm">View Gardener</a>
      </div>
    </div>
  </div>
  }
</div>

