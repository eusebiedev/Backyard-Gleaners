@model List<BackyardGleanersClient.Models.Gardener>

  @{
  ViewData["Title"] = "Search";
  }

  <main class="my-5">
    <div class="container col-xl-10 col-xxl-8 px-4 py-5 shadow-lg bg-light rounded-3">
      <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
          <h1 class="display-6 fw-bold lh-1 text-body-emphasis mb-3">Search your local Gardeners</h1>
          <p class="col-lg-10 fs-4">You can search by food type or location!</p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
          <form method="post" action="/Gardeners/Results">
            <div class="form mb-3">
              <label for="food" class="form-label">Food</label>
              <input type="text" name="food" id="food" class="form-control" />
            </div>
            <div class="form mb-3">
              <label for="location" class="form-label">Location</label>
              <input type="text" name="location" id="location" class="form-control" />
            </div>
            <input type="submit" value="Search Gardeners" class="btn btn-primary btn-sm results-button" />
          </form>
        </div>
      </div>
  </main>