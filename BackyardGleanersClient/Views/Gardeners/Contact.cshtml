@{
		ViewData["Title"] = "Contact";
}

<main class="my-5">
  <div class="container col-xl-6 col-xxl-6 px-3 py-3 shadow-lg bg-light rounded-3">
    <div class="row align-items-center g-lg-5 py-3">
      <div class="col-lg-6 text-lg-start">
        <h1 class="display-6 fw-bold lh-1 text-body-emphasis mb-1">Get in touch!</h1>
      </div>
			<div class=" col-l">
				<div class="mb-3">
					<label for="contact" class="form-label">Email address</label>
					<input type="email" class="form-control" id="contact" placeholder="name@example.com">
			</div>
			<div class="mb-3">
				<label for="contacttext" class="form-label">Message</label>
				<textarea class="form-control" id="contacttext" rows="3"></textarea>
			</div>
	</div>
</main>